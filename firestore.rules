rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para a coleção de usuários
    match /users/{userId} {
      // O usuário só pode ler seu próprio perfil e criá-lo.
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;

      // Regras para a subcoleção de pedidos (orders)
      match /orders/{orderId} {
        // O usuário pode criar e ler seus próprios pedidos.
        allow create, read: if request.auth.uid == userId;
      }

      // Regras para a subcoleção de carrinhos de compras (shoppingCarts)
      match /shoppingCarts/{cartId} {
        allow read, write: if request.auth.uid == userId;

        // Itens dentro do carrinho
        match /cartItems/{cartItemId} {
          allow read, write, delete: if request.auth.uid == userId;
        }
      }
    }

    // Coleção pública de grupos de produtos, todos podem ler.
    match /productGroups/{groupId} {
      allow read: if true;
      // Qualquer usuário autenticado pode escrever (para o admin logado)
      allow write: if request.auth != null;
    }

    // Coleção pública de produtos, todos podem ler.
    match /products/{productId} {
      allow read: if true;
      // Qualquer usuário autenticado pode escrever (para o admin logado)
      allow write: if request.auth != null;
    }
  }
}
