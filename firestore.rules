rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para a coleção de administradores
    match /roles_admin/{uid} {
      allow read: if true; // Pode ser pública ou restrita
      allow write: if false; // Geralmente gerenciado pelo servidor ou manualmente
    }

    // Regras para a coleção de usuários
    match /users/{userId} {
      // O próprio usuário pode criar seu perfil e ler/atualizar/deletar seus dados
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;

      // Subcoleção de pedidos (orders)
      match /orders/{orderId} {
        // Usuário pode criar e ler seus próprios pedidos
        allow create, read: if request.auth != null && request.auth.uid == userId;
        // Segurança extra: ninguém pode atualizar ou deletar um pedido diretamente
        // (apenas via funções de backend ou status controlados)
        allow update, delete: if request.auth != null && request.auth.uid == userId;
      }

      // Subcoleção de carrinho (shoppingCarts)
      match /shoppingCarts/{cartId} {
        allow read, write: if request.auth.uid == userId;
        // Sub-subcoleção de itens do carrinho
        match /cartItems/{cartItemId} {
          allow read, write, delete: if request.auth.uid == userId;
        }
      }
    }

    // Regra para a coleção de grupos de produtos
    match /productGroups/{productGroupId} {
      allow read: if true; // Todos podem ver os grupos de produtos
      // Apenas usuários autenticados podem modificar (para o painel de admin simples)
      allow write: if request.auth != null;
    }

    // Regra para a coleção de produtos
    match /products/{productId} {
      allow read: if true; // Todos podem ver os produtos
      // Apenas usuários autenticados podem modificar (para o painel de admin simples)
      allow write: if request.auth != null;
    }
  }
}
