
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      
      match /orders/{orderId} {
        // A user can manage their own orders
        allow read, create: if isOwner(userId);
      }

      match /shoppingCarts/{cartId} {
        allow read, create, update, delete: if isOwner(userId);

        match /cartItems/{cartItemId} {
          allow read, create, update, delete: if isOwner(userId);
        }
      }
    }
    
    // Admin pages need to list all orders from all users
    match /{path=**}/orders/{orderId} {
      allow read, update: if isSignedIn();
    }

    match /productGroups/{productGroupId} {
      // Allow admin (any authenticated user in this app's case) to manage groups
      allow read, write: if isSignedIn();
    }

    match /products/{productId} {
       // Allow admin (any authenticated user) to manage products
      allow read, write: if isSignedIn();
    }
  }
}
