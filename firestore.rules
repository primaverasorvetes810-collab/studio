rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras para a coleção de usuários
    match /users/{userId} {
      // PERMISSÃO CRÍTICA: Permite que um usuário leia seu próprio perfil.
      // Isso é necessário para que a transação de criação de pedido possa obter
      // o nome e o endereço do cliente.
      allow read: if request.auth != null && request.auth.uid == userId;

      // Permite que um novo usuário crie seu próprio documento de perfil durante o cadastro.
      allow create: if request.auth != null && request.auth.uid == userId;

      // Subcoleção de Pedidos (Orders)
      match /orders/{orderId} {
        // Permite que um usuário crie e leia seus próprios pedidos.
        allow create, read: if request.auth != null && request.auth.uid == userId;
        
        // Permite que um usuário cancele seu pedido (atualizando o status).
        // E permite que um admin (qualquer usuário autenticado, neste caso) atualize o status.
        allow update: if request.auth != null;

        // Segurança extra: ninguém pode apagar pedidos.
        allow delete: if false;
      }

      // Subcoleção de Carrinho de Compras (ShoppingCarts)
      match /shoppingCarts/{cartId} {
        // Permite que o usuário acesse e modifique seu próprio carrinho.
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Itens dentro do carrinho
        match /cartItems/{cartItemId} {
          // Permite que o usuário adicione, modifique e exclua itens de seu próprio carrinho.
          // A permissão de exclusão (delete) é essencial para limpar o carrinho após a compra.
          allow read, write, delete: if request.auth != null && request.auth.uid == userId;
        }
      }
    }

    // Regras para coleções públicas/de administração
    match /productGroups/{groupId} {
      // Qualquer um pode ver os grupos de produtos.
      allow read: if true;
      // Apenas usuários autenticados podem gerenciar grupos (através do painel admin).
      allow write: if request.auth != null;
    }

    match /products/{productId} {
      // Qualquer um pode ver os produtos.
      allow read: if true;
      // Apenas usuários autenticados podem gerenciar produtos (através do painel admin).
      allow write: if request.auth != null;
    }
  }
}
