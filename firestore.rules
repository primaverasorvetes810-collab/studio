rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para a coleção de usuários
    match /users/{userId} {
      // Usuários autenticados podem ler seus próprios perfis e criar seu próprio documento
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Permite que um usuário gerencie seu próprio carrinho de compras
      match /shoppingCarts/{cartId} {
        allow read, write: if request.auth.uid == userId;

        match /cartItems/{cartItemId} {
          allow read, write, delete: if request.auth.uid == userId;
        }
      }

      // Permite que um usuário crie e leia seus próprios pedidos
      match /orders/{orderId} {
        allow create, read: if request.auth.uid == userId;
        // Ninguém pode atualizar ou excluir um pedido diretamente
        allow update, delete: if false; 
      }
    }
    
    // Regra para o grupo de coleções de pedidos
    match /{path=**}/orders/{orderId} {
      // Permite que qualquer usuário autenticado leia todos os pedidos (para o painel de admin)
      allow read: if request.auth != null;
    }

    // Coleções de nível raiz para produtos e grupos de produtos
    match /products/{productId} {
      // Qualquer pessoa pode ler os produtos
      allow read: if true;
      // Apenas usuários autenticados podem modificar produtos (protegido pela senha do admin na UI)
      allow write: if request.auth != null;
    }

    match /productGroups/{groupId} {
      // Qualquer pessoa pode ler os grupos de produtos
      allow read: if true;
      // Apenas usuários autenticados podem modificar grupos (protegido pela senha do admin na UI)
      allow write: if request.auth != null;
    }
  }
}
