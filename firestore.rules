
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // A lógica do administrador agora é tratada por um portão de senha no cliente.
    // As regras confiam que, se um usuário estiver autenticado, ele passou
    // pela verificação de senha para realizar ações de administrador.
    // Isso NÃO é seguro para produção, mas segue a solicitação do usuário.
    function canPerformAdminAction() {
      return isSignedIn();
    }

    match /users/{userId} {
      // Qualquer usuário conectado pode criar um perfil para si mesmo.
      // Os usuários só podem ler/atualizar seus próprios perfis.
      allow create, read, update: if isSignedIn() && isOwner(userId);
      // Qualquer usuário autenticado (que passou pelo portão de senha) pode listar usuários.
      allow list: if canPerformAdminAction();

      match /orders/{orderId} {
        // Os usuários podem criar/ler seus próprios pedidos.
        allow read, create: if isSignedIn() && isOwner(userId);
        // Usuários autenticados (administradores) podem atualizar qualquer pedido.
        allow update: if canPerformAdminAction();
      }

      match /shoppingCarts/{cartId} {
        allow read, create, update, delete: if isSignedIn() && isOwner(userId);

        match /cartItems/{cartItemId} {
          allow read, create, update, delete: if isSignedIn() && isOwner(userId);
        }
      }
    }
    
    // Usuários autenticados (administradores) podem ler todos os pedidos através da consulta de grupo de coleção.
    match /{path=**}/orders/{orderId} {
       allow list, read: if canPerformAdminAction();
    }
    
    match /productGroups/{productGroupId} {
      allow read: if true;
      allow write: if canPerformAdminAction(); // A escrita é permitida para usuários autenticados (administradores)
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if canPerformAdminAction(); // A escrita é permitida para usuários autenticados (administradores)
    }

    match /carouselImages/{imageId} {
      allow read: if true;
      allow write: if canPerformAdminAction();
    }
  }
}
